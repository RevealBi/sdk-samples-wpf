<Window x:Class="DataSource_OneDrive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataSource_OneDrive"
        xmlns:reveal="http://revealbi.io/"
        mc:Ignorable="d"
        Title="Reveal SDK - OneDrive Data Source Sample" Height="800" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="Open_Click"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <Grid>
            <reveal:RevealView x:Name="revealView" CanEdit="True"/>
        </Grid>
    </DockPanel>
</Window>
